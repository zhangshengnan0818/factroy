.header {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  text-align: center;
  line-height: 40px;
  padding: 0 20px 0 0;
  font-size: 16px;
  background-color: #01aaeb;
  color: #fff;
  border-bottom: 2px solid #fff;
}
.header a {
  color: #fff;
}
.header a i {
  padding: 0 15px;
}
.main {
  padding: 40px 0 50px;
}
.footer {
  position: fixed;
  bottom: 10px;
  left: 0;
  right: 0;
  text-align: center;
}
.saveBtn {
  display: inline-block;
  border: 2px solid #fff;
  height: 35px;
  line-height: 35px;
  text-align: center;
  background-color: #b8d434;
  width: 70%;
  margin: 0 auto;
  color: #fff;
  font-size: 14px;
  box-shadow: 0 3px 10px #c0c0c0;
}
.saveBtn {
  border-radius: 20px;
  background-color: #01aaeb;
}
.perList .sum {
  display: flex;
  background-color: #fff;
}
.perList .sum div {
  flex: 1;
  padding: 5px 20px;
  line-height: 40px;
}
.perList .sum div label {
  display: inline-block;
  line-height: 30px;
  width: 40%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  vertical-align: middle;
}
.perList .sum div input {
  width: 50%;
}
table {
  margin-top: 10px;
  width: 100%;
  text-align: center;
  background-color: #fff;
}
table td,
table th {
  padding: 5px 0;
}
table tbody tr:not(:last-child) td {
  border-bottom: 1px solid #f5f5f5;
}
table input {
  width: 20vw;
}
input {
  text-align: center;
  line-height: 30px;
  border: 0;
  background-color: #f5f5f5;
  border-radius: 5px;
  padding: 0 5px;
}
