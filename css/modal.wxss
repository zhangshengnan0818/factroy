.header {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  text-align: center;
  line-height: 40px;
  padding: 0 20px 0 0;
  font-size: 16px;
  background-color: #01aaeb;
  color: #fff;
  border-bottom: 2px solid #fff;
}
.header a {
  color: #fff;
}
.header a i {
  padding: 0 15px;
}
.main {
  padding: 40px 0 50px;
}
.footer {
  position: fixed;
  bottom: 30px;
  left: 0;
  right: 0;
  text-align: center;
}
.modal {
  display: none;
  z-index: 60;
  position: fixed;
  top: 50%;
  left: 50%;
  width: 80vw;
  margin: 0 0 0 -40vw;
}
.modal p {
  line-height: 40px;
}
.modal .modalHead {
  color: #fff;
  font-weight: 600;
  text-align: center;
}
.modal .modalHead p {
  font-size: 20px;
}
.modal .modalBody {
  padding: 10px 0;
}
.outM {
  display: none;
  height: 337px;
  margin-top: -168.5px;
}
.outM .joinHead {
  background-color: #01aaeb;
}
.outM .joinHead input {
  color: #fff;
  font-size: 18px;
  width: 10%;
  margin: 10px 20px;
  border: 0;
  background-color: transparent;
}
.outM .joinBody {
  background-color: #fff;
  padding: 20px;
}
.outM .joinBody p {
  text-align: left;
}
.outM .joinBody p.count {
  text-align: center;
}
.outM .joinBody p.count input {
  width: 30%;
}
.outM .joinBody p.count i {
  padding: 0;
  background-color: #565656;
  color: #fff;
  border-radius: 50%;
}
.outM .joinBody p select {
  width: 100%;
  height: 30px;
  line-height: 30px;
  border-color: #a9a9a9;
}
.outM .joinBody p i {
  vertical-align: middle;
  font-size: 20px;
  background-color: #01aaeb;
  color: #ffd80e;
  padding: 5px;
}
.outM .joinBody p input {
  border: 0;
  width: 84%;
  text-align: center;
  height: 30px;
  line-height: 30px;
  background-color: #f5f5f5;
}
.outM .joinBody p input::-webkit-input-placeholder {
  color: #01aaeb;
}
.outM .joinBody p input:-ms-input-placeholder {
  color: #ff2e4d;
}
.outM .joinFoot {
  padding: 5px 0;
  background-color: #01aaeb;
}
.outM .joinFoot p {
  text-align: center;
}
.outM .joinFoot p a {
  display: inline-block;
  color: #565656;
  width: 80%;
  height: 30px;
  line-height: 30px;
  background-color: #ffd80e;
  font-size: 14px;
  font-weight: 600;
  border-radius: 15px;
}
/*付款方式*/
.sideBtn {
  position: fixed;
  right: 20px;
  bottom: 20%;
  z-index: 40;
}
.sideBtn p {
  width: 13px;
  background-color: #000;
  color: #fff;
  padding: 5px 8px;
  border-radius: 10px;
  opacity: 0.6;
}
.sideBtn p a {
  display: inline-block;
  color: #fff;
  font-size: 13px;
}
